    @using Pickup.Application.Features.Branches.Commands.AddEdit
<EditForm Model="@AddEditBranchModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditBranchModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @localizer["Add Branch"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @localizer["Update Branch"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditBranchModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditBranchModel.Id)" @bind-Value="AddEditBranchModel.Id" Label="@localizer["Id"]" />
                    </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditBranchModel.BranchName)" @bind-Value="AddEditBranchModel.BranchName" Label="@localizer["Branch Name"]" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">@localizer["Cancel"]</MudButton>
            @if (AddEditBranchModel.Id != 0)
            {
        <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(_processing)" Color="Color.Secondary">
           
            @if (_processing)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Updating</MudText>
            }
            else
            {
             <MudText> @localizer["Update"]</MudText>
            }
        </MudButton>
            }
            else
            {
        <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(_processing)" Color="Color.Success">
            @if (_processing)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Saving</MudText>
            }
            else
            {
        <MudText>  @localizer["Save"]</MudText>
            }
        </MudButton>
            }

        </DialogActions>
    </MudDialog>
</EditForm>
@code
{
    private bool _processing = false;


}